        <Label text="All Incidents" style="-fx-font-size: 24px;"/>
    </top>
    <center>
        <ListView fx:id="incidentsListView" />
    </center>
    <bottom>
        <Button text="Refresh" onAction="#refreshIncidents"/>
        <Button text="Back to Dashboard" onAction="#backToDashboard"/>
    </bottom>
</BorderPane> 