<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.klmsystems.javafxdesktop.ViewAllLearnersController">
    <top>
        <Label text="All Learners" style="-fx-font-size: 24px;"/>
    </top>
    <center>
        <TableView fx:id="learnersTableView">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="firstnameColumn" text="First Name" />
                <TableColumn fx:id="surnameColumn" text="Surname" />
                <TableColumn fx:id="studentIdColumn" text="Student ID" />
                <TableColumn fx:id="qrCodeColumn" text="QR Code" />
                <TableColumn fx:id="createdAtColumn" text="Created At" />
                <TableColumn fx:id="genderColumn" text="Gender" />
                <TableColumn fx:id="idNumberColumn" text="ID Number" />
                <TableColumn fx:id="languageColumn" text="Language" />
                <TableColumn fx:id="addressColumn" text="Address" />
                <TableColumn fx:id="emailAddressColumn" text="Email Address" />
                <TableColumn fx:id="phoneNumberColumn" text="Phone Number" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <Button text="Refresh" onAction="#refreshLearners"/>
        <Button text="Back to Dashboard" onAction="#backToDashboard"/>
    </bottom>
</BorderPane>